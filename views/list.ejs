<!-- prettier-ignore-->
<%- include("header") %>

<div id="heading" class="box">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% for(let i = 0; i < newListItems.length; i++) {%>
  <div class="item">
    <input type="checkbox" />
    <p><%=newListItems[i].name%></p>
  </div>
  <%}%>

  <form class="item" action="/" method="POST">
    <input
      type="text"
      name="newItem"
      placeholder="New Item"
      autocomplete="off"
    />
    <!-- prettier-ignore-->
    <button type="submit" name="list" value=<%= listTitle %>>
          <i class="fas fa-plus-square"></i>
        </button>
  </form>
</div>
<!-- prettier-ignore-->
<%- include("footer") %>
